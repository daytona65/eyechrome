{
    "manifest_version": 3,
    "name": "eyechrome",
    "description": "gesture control with eyes and hands, using your webcam",
    "version": "1.0",
    "options_page": "html/options.html",
    "action": {
      "default_popup": "html/index.html",
      "default_icon": "assets/eyelogo.png"
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*", "https://*/*"
        ],
        "js": ["js/content-script.js"],
        "css": ["js/content-script.css"]
      }
    ],
    "icons": {
      "16": "assets/eyelogo.png",
      "32": "assets/eyelogo.png",
      "48": "assets/eyelogo.png",
      "128": "assets/eyelogo.png"
    },
    "background": {
      "service_worker": "js/background.js",
      "type": "module"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs",
      "unlimitedStorage",
      "background"
    ],
    "host_permissions": [
    "*://*/*"
    ],
    "web_accessible_resources": [
    {
      "resources": ["js/webgazer.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}